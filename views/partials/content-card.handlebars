<div class="content-card homepage animate__animated animate__faster animate__fadeIn">
    <a href="/{{type}}/{{id}}">
        <div class="card">
            <div class="card-image has-text-centered card-info data-content-type=" {{type}}" data-content-id="{{id}}"">
                <img class=" card-poster" src="{{poster}}" alt="Poster image for {{title}}">
            </div>
            <div class="card-content card-info">
                <p class="content-title has-text-weight-semibold">{{title}}</p>
                <p class="title is-size-6 content-date has-text-grey">{{get_year release}}</p>
                <div class="star-container field is-grouped is-grouped-centered">
                    <p id="rating" class="mr-3 my-auto p-1 px-2">{{popularity}}</p>
                </div>
                {{!-- <p id="rating2" class="mr-3 my-auto p-1 px-2"> {{popularity}}</p> --}}
            </div>
        </div>
    </a>
</div>
  





